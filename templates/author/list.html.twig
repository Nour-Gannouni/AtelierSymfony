<html lang>
<head>
    <title>Authors List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial;
            background-color: #f4f4f4;
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
            border: 2px solid #ddd;
        }

        th {
            background-color: #2196F3;
            color: white;
        }

        tr:hover {
            background-color: #ddd;
        }

        img {
            border-radius: 8px;
        }

        a {
            text-decoration: none;
            color: #2196F3;
            font-weight: bold;

        }

        .container {
            display: flex;
            justify-content: space-around;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 200px;
            text-align: center;
            font-size: 18px;
        }

        .card h2 {
            margin: 0;
            font-size: 40px;
            color: #2196F3;
        }

        .card p {
            margin: 10px 0 0 0;
            font-size: 18px;
            color: #333;
        }

        .card i {
            font-size: 40px;
            color: #2196F3;
            margin-bottom: 10px;
        }

    </style>
</head>
<body>

    {% if authors is not defined or authors is empty %}
    <h1>Liste d'auteurs n'est pas disponible</h1>
    {% else %}
    <table>
        <tr>
            <th>Picture</th>
            <th>Name</th>
            <th>Email</th>
            <th>Number of Books</th>
            <th>Details</th>
        </tr>

        {% set somme = 0 %}
        {% for author in authors %}
        <tr>
            <td><img src="{{ asset(author.image) }}" width="100" height="100"></td>
            <td>{{ author.userName | upper }}</td>
            <td>{{ author.email }}</td>
            <td>{{ author.nbBooks }}</td>
            <td><a href="{{ path('show_author', { 'id': author.id }) }}">Details</a></td>
        </tr>
        {% set somme = somme + author.nbBooks %}
        {% endfor %}
    </table>
    {% endif %}

    <div class="container">
        <div class="card">
            <p>Number of Authors</p>
            </br></br>
            <i class="fa fa-users"></i>
            <h2>{{ authors | length }}</h2>
        </div>
        <div class="card">
             
            <p>Total Books</p>
            </br></br>
            <i class="fa fa-book"></i>
            <h2>{{ somme }}</h2>
            
        </div>
    </div>

</body>
</html>
